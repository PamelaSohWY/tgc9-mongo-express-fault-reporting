{{#extends 'base'}}

    {{#block 'content'}}
        <form method="POST">
            <div>
                <label class="form-label">Title</label>
                <input type='text' name="title" class="form-control"/>
            </div>
            <div>
                <label class="form-label">Location</label>
                <input type='text' name="location" class="form-control"/>
            </div>
            <div>
                <label class="form-label">Tags</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="tags" value="urgent">
                    <label class="form-check-label">Urgent</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="tags" value="important">
                    <label class="form-check-label">Important</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="tags" value="equipment-fault">
                    <label class="form-check-label">Equipment fault</label>
                </div>
            </div>
            <div>
                <label class="form-label">Block</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="block"  value="304">
                    <label class="form-check-label">304</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="block"  value="305">
                    <label class="form-check-label">305</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="block"  value="306">
                    <label class="form-check-label">305</label>
                </div>
            </div>
            <div>
                <label class="form-label">Reporter's Name</label>
                <input type='text' name="reporter_name" class="form-control"/>
            </div>
            <div>
                <label class="form-label">Reporter's Email</label>
                <input type='text' name="reporter_email" class="form-control"/>
            </div>
            <div>
                <label class="form-label">Date</label>
                <input type="date" name="date" class="form-control"/>
            </div>
        <input type="submit"/>
        </form>
    {{/block}}

{{/extends}}